<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cardiac.general.hospital.medicare.Report">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fff">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/online_report"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="View Medical Report"
            android:textColor="@color/colorAccent"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/EditTxtTransition"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:inputType="number"
            android:textSize="15sp"
            android:background="@drawable/border"
            android:hint="Enter Transaction No."/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/EditTxtPinNo"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:inputType="number"
            android:background="@drawable/border"
            android:hint="Enter Pin No."/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get Report"
            android:layout_marginTop="10dp"
            android:id="@+id/getReportBtn"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"/>
    </LinearLayout>
</ScrollView>
