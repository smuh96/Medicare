<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#fff"
    tools:context="cardiac.general.hospital.medicare.DoctorDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/doctorname"
            android:textSize="20sp"
            android:padding="2dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:id="@+id/doctorPic"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctorpeciality"
            android:textAlignment="center"
            android:padding="2dp"
            android:textSize="15sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctordegree"
            android:textAlignment="center"
            android:padding="2dp"
            android:textSize="15sp"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctordays1"
                android:padding="2dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctortime1"
                android:padding="2dp"
                android:textSize="15sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctordays2"
                android:padding="2dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctortime2"
                android:padding="2dp"
                android:textSize="15sp"
                android:textColor="#000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctorcontact"
            android:textAlignment="center"
            android:padding="2dp"
            android:textSize="15sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctorintro"
            android:padding="2dp"
            android:textSize="15sp"
            android:textColor="#000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Make Appointment"
            android:textColor="#fff"
            android:visibility="invisible"
            android:id="@+id/doctorAppointmentBtn"
            android:layout_margin="20dp"
            android:background="@color/colorPrimaryDark"/>
    </LinearLayout>
</ScrollView>